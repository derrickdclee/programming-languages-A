fun is_older (date1, date2) =
    let
	fun compare_day (date1, date2) =
	    if #3 date1 < #3 date2
	    then true
	    else false

	fun compare_month (date1, date2) =
	    if #2 date1 < #2 date2
	    then true
	    else if #2 date1 > #2 date2
	    then false
	    else compare_day (date1, date2)
			     
	fun compare_year (date1, date2) =
	    if #1 date1 < #1 date2
	    then true
	    else if #1 date1 > #1 date2
	    then false
	    else compare_month (date1, date2)
    in
	compare_year(date1, date2)
    end
